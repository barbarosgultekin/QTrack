@model EntityLayer.Concrete.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/_Layout.cshtml";
}


<div style="margin-top:85px">
    <div class="col-md-12">
        <div class="tab-pane active" id="tab_0">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Product / Edit Page
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form action="/Product/EditProduct" method="post" class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Product Name</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control spinner input-circle" name="PNAME" value="@Html.DisplayFor(x => x.PNAME)">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Serial</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control spinner input-circle" name="SERIAL" value="@Html.DisplayFor(x => x.SERIAL)">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Location</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control spinner input-circle" name="LOCATION" value="@Html.DisplayFor(x => x.LOCATION)">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Product Type</label>
                                <div class="col-md-4">
                                    <select name="PTYPEID" class="form-control spinner input-circle">
                                        <option selected disabled>@Html.DisplayFor(x => x.ProductType.PTYPE)</option>
                                        @foreach (var x in ViewBag.vp)
                                        {
                                            <option name="PTYPEID" value="@x.Value">@x.Text</option>

                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Capacity</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control spinner input-circle" name="PCAPACITY" value="@Html.DisplayFor(x => x.PCAPACITY)" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Manufactoring Date</label>
                                <div class="col-md-4">
                                    <input class="form-control form-control-inline input-medium date-picker" size="12" type="text" value="@Html.DisplayFor(x => x.MANUDATE)" name="MANUDATE" data-date-format="dd-mm-yyyy" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Status</label>
                                <div class="col-md-4">
                                    <input type="checkbox" name="PSTATUS" class="make-switch" checked value="True" data-on-text="Active" data-off-text="Passive" data-on-color="success" data-off-color="danger">
                                    @*<input type="hidden" name="PRODUCTID" value="@Html.DisplayFor(x=>x.PRODUCTID)" />*@
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn btn-circle green">Save Changes</button>
                                    <input type="hidden" name="PRODUCTID" value="@Html.DisplayFor(x=>x.PRODUCTID)" />
                                    <input type="hidden" name="PTYPEID" value="@Html.DisplayFor(x=>x.PTYPEID)" />
                                    <a href="~/Product/Index" class="btn btn-circle grey-salsa btn-outline">Back</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>