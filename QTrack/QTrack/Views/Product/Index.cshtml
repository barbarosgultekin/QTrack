@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}


<div style="margin-top:100px">


    <div class="col-md-3">
        <button class="btn btn-md yellow" data-toggle="modal" data-target="#static">
            New Product
            <i class="fa fa-plus"></i>
        </button>
    </div>

