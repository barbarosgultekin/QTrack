    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Product List - EL Series
                </div>
                <div class="tools"></div>
            </div>
            <div class="portlet-body">
                @*<table class="table table-striped table-hover table-bordered" id="sample_editable_1">*@
                <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_3" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col" style="width:450px !important"> Product Name </th>
                            <th scope="col"> Product Type</th>
                            <th scope="col"> Capacity</th>
                            <th class="none"> Product ID</th>
                            <th scope="col"> Location </th>
                            <th scope="col"> Serial </th>
                            <th scope="col"> Manufactoring  </th>
                            <th scope="col"> Status / Edit </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.PTYPEID == 4)
                            {
                        <tr>
                            <td>@item.PNAME</td>
                            <td>@item.ProductType.PTYPE</td>
                            <td>@item.PCAPACITY</td>
                            <td>@item.PRODUCTID</td>
                            <td align="center">
                                <a href="@item.LOCATION" target="_blank" class="btn btn-icon-only red">
                                    <i class="fa fa-map"></i>
                                </a>
                            </td>
                            <td>@item.SERIAL</td>
                            <td> @Convert.ToDateTime(item.MANUDATE).ToString("dd/MM/yyyy")</td>
                            @switch (item.PSTATUS)
                            {
                                case true:
                                    <td align="center"><a href="~/Product/EditProduct?id=@item.PRODUCTID" class="label label-sm label-success">Aktif</a></td>
                                    break;
                                case false:
                                    <td align="center"><a href="~/Product/EditProduct?id=@item.PRODUCTID" class="label label-sm label-danger">Pasif</a></td>
                                    break;
                            }
                        </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

