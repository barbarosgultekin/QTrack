@using EntityLayer.Concrete
@model List<QRHistory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<div style="margin-top:100px">   
    <div class="col-md-12">
        <div class="portlet-body form">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">QR Code History</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_3" cellspacing="0">
                        <thead>
                            <tr>
                                <th> QR Code</th>
                                <th class="none">ID</th>
                                <th class="none">Serial</th>
                                <th class="none">Company</th>
                                <th class="none">Product</th>
                                <th>Operation</th>
                                <th>Operation Date</th>
                                <th>Fill Date</th>
                                <th>ReFill Date</th>
                                <th class="none">Location</th>
                                <th class="none">Factory Date</th>
                                <th>Exp Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.QR.QRCODE</td>
                                <td>@item.REFID</td>
                                <td>@item.QR.Product.SERIAL</td>
                                <td>@item.QR.Company.CNAME</td>
                                <td>@item.QR.Product.PNAME</td>
                                <td>@item.OPERATION</td>
                                <td>@Convert.ToDateTime(item.OPERATIONDATE).ToString("dd/MM/yyyy")</td>
                                <td>@Convert.ToDateTime(item.QR.FILLDATE).ToString("dd/MM/yyyy")</td>
                                <td>@Convert.ToDateTime(item.QR.REFILLDATE).ToString("dd/MM/yyyy")</td>
                                <td><a href="@item.QR.Product.LOCATION" target="_blank">Click By Location</a></td>
                                <td>@Convert.ToDateTime(item.QR.FACTORYDATE).ToString("dd/MM/yyyy")</td>
                                <td>@Convert.ToDateTime(item.QR.EXPDATE).ToString("dd/MM/yyyy")</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Layout/js/jquery.js"></script>

<script>
	$(document).ready(function()
    {
        switch ('@TempData["protoastr"]') {
            case "Added":
                toastr.success('@TempData["message"]', 'Register');
                break;
            case "Error":
                toastr.error('Kayıt Başarısız !!', 'Not Register');
                break;
            case "Edit":
                toastr.warning('Kayıt Başarısız !!', 'Not Register');
                break;
            default:
        }
		});
</script>

